@model IEnumerable<Student>
@using System.Globalization

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h1 style="background-color: #4a90e2; color: #ffffff; text-align: center; padding: 20px 40px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); font-size: 2em;">
	Welcome to Students Index
</h1>


<a asp-controller="Students" asp-action="GetCreateView" class="btn btn-success">Create New</a>

@if (Model.Count() > 0)
{
	<form method="get" class="col-3">
		<div class="mt-3 input-group ">
			<input name="search" asp-controller="Students" asp-action="GetIndexView" value="@ViewBag.SearchText" class="form-control" />
			<button type="submit" class="input-group-append btn btn-secondary"> <i class="bi bi-search"></i></button>
		</div>
	</form>
	<table class="table table-bordered table-hover table-striped caption-top text-center">
		<caption>Staff</caption>
		<thead>

			<tr>
				<th>@Html.DisplayNameFor(e=>e.Id)</th>
				<th>@Html.DisplayNameFor(e => e.FullName)</th>
				<th>@Html.DisplayNameFor(e => e.Grade)</th>
				<th>@Html.DisplayNameFor(e => e.GPA)</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var emp in Model)
			{
				<tr>
					<td>@emp.Id</td>
					<td>@emp.FullName</td>
					<td>@emp.Grade</td>
					<td>@emp.GPA</td>
					<td><img src="@emp.ImagePath" /></td>
					<td>
					<a asp-controller="Students" asp-action="GetDetailsView" asp-route-id="@emp.Id" style="text-decoration:none" class="btn btn-success" title="Details"> 
							<i class="bi bi-list-ul"></i>
					</a>

						<a asp-controller="Students" asp-action="GetEditView" asp-route-id="@emp.Id" style="text-decoration:none" class="btn btn-primary" title="Edit"> <i class="bi bi-pencil-square" ></i></a>

						<a asp-controller="Students" asp-action="GetDeleteView" asp-route-id="@emp.Id" style="text-decoration:none" class="btn btn-danger" title="Delete"> <i class="bi bi-trash"></i></a>
				</td>
				</tr>
			}

		</tbody>

	</table>
}
else
{
	<h1 class="alert alert-danger text-center">There is no Students</h1>
}





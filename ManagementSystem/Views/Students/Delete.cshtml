@model Student
@using System.Globalization

<div class="container my-5">
    <div class="alert alert-danger text-center">
        <h1 style="color:darkred;">Are you sure you want to delete this Student?</h1>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Id</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Course</dt>
                <dd class="col-sm-8">@Model.Course.CourseName (@Model.Course.TeacherName)</dd>

                <dt class="col-sm-4">National Id</dt>
                <dd class="col-sm-8">@Model.NationalId</dd>

                <dt class="col-sm-4">Grade</dt>
                <dd class="col-sm-8">@Model.Grade</dd>

                <dt class="col-sm-4">GPA</dt>
                <dd class="col-sm-8">@Model.GPA</dd>

                <dt class="col-sm-4">Enroll Date</dt>
                <dd class="col-sm-8">@Model.EnrollDate.ToString("MMMM dd, yyyy", CultureInfo.InvariantCulture)</dd>

                <dt class="col-sm-4">Graduation Date</dt>
                <dd class="col-sm-8">@Model.GraduationDate.ToString("MMMM dd, yyyy", CultureInfo.InvariantCulture)</dd>

                <dt class="col-sm-4">Phone Number</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">Email Address</dt>
                <dd class="col-sm-8">@Model.EmailAddress</dd>
            </dl>
        </div>

        <div class="col-md-4 text-center">
            <img src="@Model.ImagePath" alt="Student Image" class="img-thumbnail w-100" style="max-width: 200px;">
        </div>
    </div>

    <div class="text-center">
        <form method="post" asp-controller="Students" asp-action="DeleteCurrent" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
        </form>
        <a asp-controller="Students" asp-action="GetIndexView" class="btn btn-secondary">Back</a>
    </div>
</div>
